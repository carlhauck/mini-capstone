<h1>Edit Product</h1>

<form action="/products/<%= @product.id %>" method="patch">
  <div>
    Name: <input type="text" name="name" value ="<%= @product.name %>">
  </div>
  <div>
    Price: <input type="text" name="price" value ="<%= @product.price %>">
  </div>
  <div>
    Description: <textarea rows="5" cols="60" name="description"><%= @product.description %></textarea>
  </div>
  <div>
    <select name="supplier_id">
      <% suppliers = Supplier.all %>
      <% suppliers.each do |supplier| %>
        <option value="<%= supplier.id %>"><%= supplier.name %></option>
      <% end %>
    </select>
  </div>
  <div>
    <button type="submit">Create Product</button>
  </div>
</form>